<configuration>
	<appender name="stdout" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
		</encoder>
	</appender>

	<!--<logger name="org.hbase.async.RegionClient" level="DEBUG"/>-->

	<!--<logger name="net.opentsdb.core.aggregator.SumAggregator" level="DEBUG"/>
	<logger name="net.opentsdb.datastore.cassandra.CassandraDatastore" level="DEBUG"/>-->

	<root level="INFO">
		<appender-ref ref="stdout"/>
	</root>
</configuration>